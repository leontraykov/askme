<div class="container">

  <% if @question.errors.any? %>
    <div class="mb">
      <% @question.errors.full_messages.each do |message| %>
      <p class="mb-sm text-red"><%= message %></p>
      <% end %>
    </div>
  <% end %>
  
  <h2 class="title-lg mb">New question</h2>

<%= render 'form', question: @question %>
</div>
