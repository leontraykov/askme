<div class="container">
  <h2 class="title-lg mb">Question <%= @question.id %> </h2>

  <p class="mb-sm"><%= @question.body %></p>
  <p>user_id: <b><%= @question.user_id %></b></p>

  <div class="mt mb">
    <%= link_to fa_icon('pencil'), edit_question_path(@question), title: 'Edit this Question' %>
    <%= button_to fa_icon('trash-o'), question_path(@question), method: :delete, title: 'Delete this Question', 
    form: {data: {turbo_confirm: 'This question will be deleted! Are you sure?'}} %>
  </div>

  <p class="mt"><%= link_to "All questions", questions_path, class: 'button button-main' %></p>
</div>
