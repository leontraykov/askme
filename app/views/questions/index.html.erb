<div class="container">
  <div class="mt">
    <%= link_to 'Create new question', new_question_path, class: 'button button-main' %>
  </div>

  <p class="mt">
    <%= render 'form', question: @question %>
  </p>
</div>

<div class="container mt-sm">
  <h2 class="title-lg">We got here <%= @questions.count %> questions:</h2>
</div>

<% @questions.each do |question| %>
  <div class="mt-sm container">
    <%= render question %>
  </div>
<% end %>
