<div class="container">
  <% if @user.errors.any? %>
    <div class="mb">
      <% @user.errors.full_messages.each do |message| %>
      <p class="mb-sm text-red"><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <h2 class="title">User data change form</h2>

  <div class="mt">
    <%= form_with model: @user, data: {turbo: false} do |form| %>
      <p><%= form.label :name, 'Your name' %></p>
      <p><%= form.text_field :name, class: 'form-text-field' %></p>

      <p class="mt"><%= form.label :nickname, 'Nickname for this website' %></p>
      <p><%= form.text_field :nickname, class: 'form-text-field' %></p>

      <p class="mt-lg text-sm">If you would not change your password just leave next fields empty</p>

      <p class="mt"><%= form.label :password %></p>
      <p><%= form.password_field :password, class: 'form-text-field' %></p>

      <p class="mt"><%= form.label :password_confirmation %></p>
      <p><%= form.password_field :password_confirmation, class: 'form-text-field' %></p>

      <p class="mt-lg">
        <%= form.submit 'Edit user data!', class: 'button button-main' %>
        <span class="text-sm"> or you can <%= link_to 'Get back', :back %></span>
      </p>
    <% end %>
  </div>

  <div class='mt-lg'>
    <%= button_to "Delete user", user_path(@user),
    method: :delete,
    form: {data: {turbo_confirm: "DELETE CURRENT USER?"}},
    class: 'text-red text-sm' %>
  </div>
</div>